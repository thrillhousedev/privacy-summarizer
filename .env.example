# Signal Configuration
SIGNAL_PHONE_NUMBER=+15551234567

# Ollama Configuration
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=dolphin-mistral:7b

# Database Configuration
DB_PATH=/data/privacy_summarizer.db
# REQUIRED: Encryption key for database (generate a strong random key)
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your-secure-encryption-key-here

# Signal-CLI Configuration
SIGNAL_CLI_CONFIG_DIR=/signal-cli-config

# SSE Streaming Mode (optional - for faster message handling)
# Set to true to use SSE streaming instead of subprocess polling
# Requires docker-compose.sse.yml override or running signal-daemon container
USE_SSE=false
# Signal daemon host (when using SSE mode)
SIGNAL_DAEMON_HOST=signal-daemon
# Signal daemon port (when using SSE mode)
SIGNAL_DAEMON_PORT=8080

# Scheduler Configuration
# Enable scheduled summaries (runs summary jobs at configured times)
ENABLE_SCHEDULER=true
# Auto-accept group invites
AUTO_ACCEPT_GROUP_INVITES=true

# Retention Configuration
# How often to run purge job (in hours)
PURGE_INTERVAL_HOURS=1
# Default message retention for groups without a schedule (in hours)
DEFAULT_MESSAGE_RETENTION_HOURS=48
# Default summary run retention (in hours) - 168 = 7 days
DEFAULT_SUMMARY_RETENTION_HOURS=168

# DM Chat Configuration
# Enable/disable DM chat feature (kill switch)
DM_CHAT_ENABLED=true
# DM message retention (in hours) - same default as group messages
DM_RETENTION_HOURS=48

# Timezone Configuration
# IANA timezone string (e.g., America/Chicago, America/New_York, Europe/London, UTC)
# Used for date calculations and "today/yesterday" logic
# Scheduled summaries have their own per-schedule timezone settings
TIMEZONE=UTC

# API Configuration (optional - for web UI)
# Shared secret for API authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET=your-api-secret-here
# API server port
API_PORT=8000
# Frontend port
FRONTEND_PORT=3000
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
